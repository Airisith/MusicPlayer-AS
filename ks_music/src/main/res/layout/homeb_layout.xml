<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#00000000"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/homeb_infoLayout"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:background="#00000000" >

        <ImageView
            android:id="@+id/homeb_cap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dftcap" 
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/homeb_title"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_toRightOf="@id/homeb_cap"
            android:background="#00000000"
            android:text="音乐是人类灵魂的避难所"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/homeb_time"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_below="@id/homeb_title"
            android:layout_toRightOf="@id/homeb_cap"
            android:background="#00000000"
            android:text="0:00-0:00"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/homeb_artist"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_below="@id/homeb_time"
            android:layout_toRightOf="@id/homeb_cap"
            android:background="#00000000"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/homeb_menulayout"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/homeb_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/play" />

        <ImageView
            android:id="@+id/homeb_next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/homeb_order"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/order" />
    </LinearLayout>

</LinearLayout>